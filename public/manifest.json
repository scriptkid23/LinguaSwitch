{
  "name": "LinguaSwitch",
  "description": "The power of React and TypeScript for building language",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./static/js/content.js"],
      "css": ["./static/css/main.css"]
    }
  ],
  "permissions": ["activeTab", "clipboardRead"],
  "icons": {
    "16": "logo64.png",
    "48": "logo96.png",
    "128": "logo128.png"
  }
}
